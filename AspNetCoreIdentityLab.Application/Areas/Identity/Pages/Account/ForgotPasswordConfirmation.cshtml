@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

@inject UserManager<User> UserManager

<h1>@ViewData["Title"]</h1>
@{
    if (string.IsNullOrEmpty(@Model.ConfirmationUrl))
    {
        <p>
            Your email/username @Model.Email was not found or your email is not confirmed.
        </p>
    }
    else
    {
        if (UserManager.Options.SignIn.RequireConfirmedEmail)
        {
            <p>
                Please check your email to confirm your account.
            </p>
        }
        else
        {
            <p>
                This app does not currently have a real email sender registered, see <a href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
                Normally this would be emailed: <a id="confirm-link" href="@Model.ConfirmationUrl">Click here to reset your password</a>
            </p>
        }
    }

}

